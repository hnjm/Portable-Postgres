<?xml version="1.0" encoding="utf-8" ?>
<update>
  <!-- If set to zero, the updater will be disabled -->
  <enabled>1</enabled>
  <!-- The local file used for the icon -->
  <icon>Portable-Postgres.exe</icon>
  <!-- The title of the application -->
  <title>Portable Postgres</title>
  <!-- The local file executed afterwards -->
  <executeFile>Portable-Postgres.exe</executeFile>
  <!-- The URL used for retrieving the data of the current version of the application (zip file) -->
  <urlBinary>https://github.com/ubermeat/Portable-Postgres/raw/master/DOWNLOAD_URL</urlBinary>
  <!-- The URL used for retrieving the current version of the application -->
  <urlVersionCheck>https://raw.github.com/ubermeat/Portable-Postgres/master/VERSION</urlVersionCheck>
  <!-- The URL used for displaying the change-log -->
  <urlChangelog>https://raw.github.com/ubermeat/Portable-Postgres/master/CHANGELOG</urlChangelog>
  <!-- The list of files which cannot be running when the application updates -->
  <processFileNames>
    <item>Portable-Postgres.exe</item>
  </processFileNames>
  <!-- Excluded files - usually only the files used by the updater -->
  <excludedFiles>
    <item>Updater.exe</item>
  </excludedFiles>
  <!-- Used to check of the application needs updating -->
  <version>
    <major>1</major>
    <minor>6</minor>
    <build>0</build>
  </version>
  <contact>
    <website>http://www.ubermeat.co.uk</website>
    <email>limpygnome@gmail.com</email>
  </contact>
</update>